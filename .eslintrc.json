{
    "extends": [ 
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": ["error", 2], // Указываем желаемый отступ (2 пробела в данном случае)
        "react/prop-types": "off"
    },
    "env": {
        "browser": true,
        "node": true
    }
}  